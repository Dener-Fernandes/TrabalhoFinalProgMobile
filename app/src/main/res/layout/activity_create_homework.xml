<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateHomeworkActivity">

    <Spinner
        android:id="@+id/menuSpinnerCreateHomework"
        android:layout_width="409dp"
        android:layout_height="32dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="3dp" />


    <EditText
        android:id="@+id/homeworkNameCreateValue"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:hint="@string/NomeAtividade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuSpinnerCreateHomework" />

    <EditText
        android:id="@+id/homeworkDescriptionCreateValue"
        android:layout_width="280dp"
        android:layout_height="95dp"
        android:layout_marginTop="32dp"
        android:hint="@string/DescricaoAtividade"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeworkNameCreateValue" />
    <Button
        android:id="@+id/buttonSetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:onClick="showTimePickerDialog"
        android:text="Definir horÃ¡rio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeworkDescriptionCreateValue" />

    <Button
        android:id="@+id/buttonSetdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:onClick="showDatePickerDialog"
        android:text="Definir data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toEndOf="@+id/buttonSetTime"
        app:layout_constraintTop_toBottomOf="@+id/homeworkDescriptionCreateValue" />
</androidx.constraintlayout.widget.ConstraintLayout>